<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD9898"
    tools:context=".PersonaActivity"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra_bold_italic"
        android:gravity="center"
        android:text="Datos Persona"
        android:textColor="#000000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#BD9898"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Cedula"
            android:textColor="#000000"
            android:textColorHighlight="#2E0909"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/etCedula"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:ems="10"
            android:fontFamily="@font/almendra_bold_italic"
            android:hint="Ingrese Cedula"
            android:inputType="number"
            android:textColor="#2E0909"
            android:textColorHighlight="#2E0909"
            android:textColorLink="#2E0909" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Ingrese Nombre"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/etNombreRegistro"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:fontFamily="@font/almendra_bold_italic"
            android:hint="Ingrese su Nombre"
            android:inputType="text"
            android:textColor="#2E0909"
            android:textColorHighlight="#2E0909"
            android:textColorLink="#2E0909" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Elija Sexo"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radioGroupGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbHombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Hombre"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/rbMujer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Mujer"
                android:textColor="#000000" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Ingrese Provincia"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etProvincia"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:fontFamily="@font/almendra_bold_italic"
            android:hint="Provincia"
            android:inputType="text"
            android:textColor="#2E0909"
            android:textColorHighlight="#2E0909"
            android:textColorLink="#2E0909" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Ingrese Correo"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/eteEmail"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:ems="10"
            android:fontFamily="@font/almendra_bold_italic"
            android:hint="e-mail"
            android:inputType="textEmailAddress"
            android:textColor="#2E0909"
            android:textColorHighlight="#2E0909"
            android:textColorLink="#2E0909" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/almendra_bold_italic"
                android:text="Guardar"
                app:icon="@android:drawable/ic_menu_save" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/almendra_bold_italic"
                android:text="Eliminar"
                app:icon="@android:drawable/ic_menu_delete" />

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/almendra_bold_italic"
                android:text="Consultar"
                app:icon="@android:drawable/ic_menu_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BD9898"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almendra_bold_italic"
            android:text="Regresar"
            android:layout_gravity="center_horizontal"
            app:icon="@android:drawable/ic_menu_revert" />

    </LinearLayout>

</FrameLayout>