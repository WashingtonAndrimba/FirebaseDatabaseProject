<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD9898">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#BD9898"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almendra_bold_italic"
            android:gravity="center"
            android:text="Ventas"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/lvlVentasCodigo"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:fontFamily="@font/aladin"
            android:hint="Ingrese codigo "
            android:inputType="text"
            android:textColor="#2E0909"
            android:textColorHighlight="#2E0909"
            android:textColorHint="#000000"
            android:textColorLink="#2E0909" />

        <Button
            android:id="@+id/btnVentasBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/almendra_bold_italic"
            android:text="Buscar"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvVentasNombre"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:fontFamily="@font/aladin"
            android:hint="Nombre"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStock"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="@font/aladin"
            android:hint="Stock"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPrecioVentas"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="@font/aladin"
            android:hint="Precio Ventas"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/lvlCantidad"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:fontFamily="@font/aladin"
            android:hint="Cantidad"
            android:inputType="text"
            android:textColor="#2E0909"
            android:textColorHighlight="#2E0909"
            android:textColorHint="#000000"
            android:textColorLink="#2E0909"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvVentasTotalPagar"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:fontFamily="@font/aladin"
            android:hint="Total a pagar"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnVentasTotalPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/almendra_bold_italic"
            android:text="Total a pagar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnVender"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/almendra_bold_italic"
            android:text="Vender"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="190dp"
            android:layout_height="135dp"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:src="@drawable/checklist" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>