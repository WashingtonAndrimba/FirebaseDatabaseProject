<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD9898">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="737dp"
        android:background="#BD9898"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almendra_bold_italic"
            android:gravity="center"
            android:text="Registro de Usuario"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="190dp"
            android:layout_height="135dp"
            android:layout_gravity="right"
            android:src="@drawable/account" />

        <EditText
            android:id="@+id/lvlRegistroIngreseCorreo"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:fontFamily="@font/aladin"
            android:hint="Ingrese correo"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHighlight="#2E0909"
            android:textColorHint="#000000"
            android:textColorLink="#2E0909" />

        <EditText
            android:id="@+id/lvlRegistroIngreseContraseña"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:fontFamily="@font/aladin"
            android:hint="Ingrese Contraseña"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHighlight="#2E0909"
            android:textColorHint="#000000"
            android:textColorLink="#2E0909" />

        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almendra_bold_italic"
            android:text="Registrarse" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>